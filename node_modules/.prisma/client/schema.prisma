datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  createdAt  DateTime    @default(now())
  techniques Technique[]
  matches    Match[]
}

model Technique {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  category    String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model Match {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  opponent  String?
  result    String?
  date      DateTime?
  createdAt DateTime  @default(now())
}
